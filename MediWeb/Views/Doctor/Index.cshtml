@model IEnumerable<DoctorDetailsViewModel>

@{
    ViewData["Title"] = "Doctors";
}

<h1 class="my-4">Doctors</h1>

<div class="mb-4">
    <a asp-action="Create" class="btn btn-primary">Add New Doctor</a>
</div>

<table class="table table-hover table-striped">
    <thead class="table-dark">
        <tr>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Title</th>
            <th scope="col">Email</th>
            <th scope="col">Works at Clinics</th>
            <th scope="col" class="text-end">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var doctor in Model)
        {
            <tr>
                <td>@doctor.FirstName</td>
                <td>@doctor.LastName</td>
                <td>@doctor.Title</td>
                <td>@doctor.Email</td>
                <td>@doctor.ClinicNames</td>
                <td class="text-end">
                    <a asp-action="Edit" asp-route-id="@doctor.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@doctor.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
