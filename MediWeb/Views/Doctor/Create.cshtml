@model RegisterDoctorViewModel;

@{
    ViewData["Title"] = "Register Doctor";
}

<h1 class="my-4">Register a Doctor</h1>

<h4 class="mb-3">Doctor</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            <div class="form-group">
                <label asp-for="FirstName" class="form-label">First Name</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="form-label">Last Name</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="form-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="control-label">Confirm Password</label>
                <input asp-for="ConfirmPassword" class="form-control" type="password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div id="doctor-clinics-container" class="mb-3">
                <h4 class="mb-3">Doctor Clinics</h4>
                <button type="button" id="add-doctor-clinic" class="btn btn-secondary mb-3">Add Clinic and Specialization</button>

                <!-- Template for dynamically adding DoctorClinic fields -->
                <div class="form-group doctor-clinic-template mb-3" style="display: none;">
                    <div class="row clinic-specialization-pair mb-3">
                        <div class="col-md-5">
                            <label class="control-label">Clinic</label>
                            <select class="form-control clinic-id-select" asp-items="ViewBag.ClinicId"></select>
                            <span class="text-danger clinic-id-validation"></span>
                        </div>
                        <div class="col-md-5">
                            <label class="control-label">Specialization</label>
                            <select class="form-control specialization-id-select" asp-items="ViewBag.SpecializationId"></select>
                            <span class="text-danger specialization-id-validation"></span>
                        </div>
                        <div class="col-md-2 d-flex align-items-end">
                            <button type="button" class="remove-doctor-clinic btn btn-danger mb-2">Remove</button>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <label class="form-label">Note</label>
                            <input class="form-control note-input" />
                            <span class="text-danger note-validation"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Styles {
    <style>
        .mb-2 {
            margin-bottom: 0.5rem;
        }

        .mb-3 {
            margin-bottom: 1rem;
        }

        .mt-3 {
            margin-top: 1rem;
        }

        .row {
            margin-bottom: 1rem;
        }
    </style>
}

@section Scripts {
    <script>
        $(document).ready(function () {
            var index = 0;

            $('#add-doctor-clinic').click(function () {
                var newTemplate = $('.doctor-clinic-template').clone().removeClass('doctor-clinic-template').show();
                newTemplate.find('.clinic-id-select').attr('name', 'DoctorClinics[' + index + '].ClinicId');
                newTemplate.find('.clinic-id-validation').attr('data-valmsg-for', 'DoctorClinics[' + index + '].ClinicId');

                newTemplate.find('.specialization-id-select').attr('name', 'DoctorClinics[' + index + '].SpecializationId');
                newTemplate.find('.specialization-id-validation').attr('data-valmsg-for', 'DoctorClinics[' + index + '].SpecializationId');

                newTemplate.find('.note-input').attr('name', 'DoctorClinics[' + index + '].Note');
                newTemplate.find('.note-validation').attr('data-valmsg-for', 'DoctorClinics[' + index + '].Note');

                $('#doctor-clinics-container').append(newTemplate);
                index++;
            });

            $(document).on('click', '.remove-doctor-clinic', function () {
                $(this).closest('.clinic-specialization-pair').remove();
            });
        });
    </script>
}
