@model IEnumerable<DataLayer.Clinic>

@{
    ViewData["Title"] = "Clinics";
}

<h1 class="my-4">Clinics</h1>

<div class="mb-4">
    <a asp-action="Create" class="btn btn-primary">Add New Clinic</a>
</div>

<table class="table table-hover table-striped">
    <thead class="table-dark">
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Address</th>
            <th scope="col">Email</th>
            <th scope="col">Pib</th>
            <th scope="col">Work Hours</th>
            <th scope="col">Phone Number</th>
            <th scope="col" class="text-end">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var clinic in Model)
        {
            <tr>
                <td>@clinic.Name</td>
                <td>@clinic.Address</td>
                <td>@clinic.Email</td>
                <td>@clinic.Pib</td>
                <td>@clinic.WorkHours</td>
                <td>@clinic.PhoneNumber</td>
                <td class="text-end">
                    <a asp-action="Edit" asp-route-id="@clinic.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@clinic.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
