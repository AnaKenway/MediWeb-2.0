@model IEnumerable<MedicalEmployeeDetailsViewModel>

@{
    ViewData["Title"] = "Medical Employees";
}

<h1 class="my-4">Medical Employees</h1>

<div class="mb-4">
    <a asp-action="Create" class="btn btn-primary">Add New Medical Employee</a>
</div>

<table class="table table-hover table-striped">
    <thead class="table-dark">
        <tr>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Email</th>
            <th scope="col">Works at Clinic</th>
            <th scope="col" class="text-end">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var medicalEmployee in Model)
        {
            <tr>
                <td>@medicalEmployee.FirstName</td>
                <td>@medicalEmployee.LastName</td>
                <td>@medicalEmployee.Email</td>
                <td>@medicalEmployee.ClinicName</td>
                <td class="visually-hidden">@medicalEmployee.ClinicId</td>
                <td class="text-end">
                    <a asp-action="Edit" asp-route-id="@medicalEmployee.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@medicalEmployee.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
