@model MedicalEmployeeDetailsViewModel

@{
    ViewData["Title"] = "Delete Medical Employee";
}

<h1 class="my-4">Delete Medical Employee</h1>

<h4 class="mb-3">Are you sure you want to delete this?</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <dl class="row">
            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.FullName</dd>

            <dt class="col-sm-3">Works at Clinic</dt>
            <dd class="col-sm-9">@Model.ClinicName</dd>
        </dl>
        <form asp-action="Delete">
            <div class="d-grid gap-2">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>
