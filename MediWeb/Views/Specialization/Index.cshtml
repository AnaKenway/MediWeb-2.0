@using DataLayer
@model IEnumerable<Specialization>

@{
    ViewData["Title"] = "Specialization";
}

<h1 class="my-4">Specialization</h1>

<div class="mb-4">
    <a asp-action="Create" class="btn btn-primary">Add New Specialization</a>
</div>

<table class="table table-hover table-striped">
    <thead class="table-dark">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Specialization name</th>
            <th scope="col" class="text-end">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var specialization in Model)
        {
            <tr>
                <td>@specialization.Id</td>
                <td>@specialization.SpecializationName</td>
                <td class="text-end">
                    <a asp-action="Edit" asp-route-id="@specialization.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@specialization.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
