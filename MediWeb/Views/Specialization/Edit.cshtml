@using DataLayer
@model Specialization

@{
    ViewData["Title"] = "Edit Specialization";
}

<h1 class="my-4">Edit Specialization</h1>

<h4 class="mb-3">Specialization</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post">
            <div class="mb-3">
                <label asp-for="SpecializationName" class="form-label"></label>
                <input asp-for="SpecializationName" class="form-control" />
                <span asp-validation-for="SpecializationName" class="text-danger"></span>
            </div>
            <div class="d-grid gap-2">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>
